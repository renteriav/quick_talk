.wrapper.wrapper-content
  .row
    .col-md-7.animated.fadeInRight
      / multistep form
      #msform{:role => "tabpanel"}
        .app-studio-container
          / Nav tabs
          %ul.nav.nav-tabs{:role => "tablist"}
            %li.active{:role => "presentation"}
              %a{"aria-controls" => "Info", "data-toggle" => "tab", :href => "#info", :role => "tab"} Info
            %li{:role => "presentation"}
              %a{"aria-controls" => "Logo", "data-toggle" => "tab", :href => "#logo", :role => "tab"} Logo
            %li{:role => "presentation"}
              %a{"aria-controls" => "Profile Picture", "data-toggle" => "tab", :href => "#profile", :role => "tab"} Picture
            %li{:role => "presentation"}
              %a{"aria-controls" => "Header", "data-toggle" => "tab", :href => "#header", :role => "tab"} Header
          / fieldsets
          .tab-content
            #info.tab-pane.fade.in.active{:role => "tabpanel"}
              .form
                %h2 Company Info
                = form_for [current_user, @brand], url: user_brand_path, authenticity_token: true, html: {:multipart => true, :remote => true} do |f|
                  .text-left.margin-left.col-sm-offset-2
                    %i *required (Displayed if no logo image is supplied)
                  .form-group.info-form
                    = f.label :name, class: "col-sm-2 control-label white-font hidden-xs"
                    .col-sm-10
                      = f.text_field :company_name, class: "form-control", autocomplete: "off", placeholder: "Company Name", required: :true, id: "brand-name-input"
                  .text-left.margin-left.col-sm-offset-2
                    %i Optionals fields to display. 
                  .form-group.info-form
                    = f.label :website, class: "col-sm-2 control-label white-font hidden-xs"
                    .col-sm-10
                      = f.url_field :brand_website, class: "form-control", autocomplete: "off", placeholder: "http://www.name.com"
                  .form-group.info-form
                    = f.label :phone, class: "col-sm-2 control-label white-font hidden-xs"
                    .col-sm-10
                      = f.phone_field :brand_phone, class: "form-control phone-mask", autocomplete: "off", placeholder: "(xxx) xxx-xxxx", id: "brand-phone-input"
                  .form-group.info-form
                    = f.label :email, class: "col-sm-2 control-label white-font hidden-xs"
                    .col-sm-10
                      = f.email_field :brand_email, class: "form-control", autocomplete: "off", placeholder: "name@email.com", id: "brand-email-input"
                    .col-sm-12
                      = f.submit class: "btn btn-primary pull-right margin-top-2x"
            #logo.tab-pane.fade{:role => "tabpanel"}
              %h2 Select your logo image
              = form_for [current_user, @brand], url: user_brand_path, authenticity_token: true, html: {:multipart => true, :remote => true, id: "logo-upload-form"} do |f| 
                .form-group.row
                  .col-sm-12
                    %span.btn.btn-block.btn-lg.btn-primary.fileinput-button
                      %i.fa.fa-plus
                      %span Upload File
                      = f.file_field :logo_image, class: "file"
                .logo-preview.col-sm-12.text-center.upload-preview
                  %p
                  = image_tag "my_logo.gif"
              =link_to raw('<i class="fa fa-minus-circle"></i><span> Remove image</span>'), delete_logo_user_brand_path(brand_id: @brand.id), :method => :delete, class: "btn btn-info pull-right", id: 'remove-logo-butt'
            #profile.tab-pane.fade{:role => "tabpanel"}
              %h2 Select your profile picture
              = form_for [current_user, @brand], url: user_brand_path, authenticity_token: true, html: {:multipart => true, :remote => true, id: "avatar-upload-form"} do |f| 
                .form-group.row
                  .col-sm-12
                    %span.btn.btn-block.btn-lg.btn-primary.fileinput-button
                      %i.fa.fa-plus
                      %span Upload File
                      = f.file_field :profile_image, class: "file"
                .avatar-preview.col-sm-12.text-center.avatar-upload-preview
                  %p
                  = image_tag "user.png"
              =link_to raw('<i class="fa fa-minus-circle"></i><span> Remove image</span>'), delete_profile_image_user_brand_path(brand_id: @brand.id), :method => :delete, class: "btn btn-info pull-right", id: 'remove-avatar-butt'
            #header.tab-pane.fade{:role => "tabpanel"}
              %h2 Type Your Header
              = form_for [current_user, @brand], url: user_brand_path, authenticity_token: true, html: {:multipart => true, :remote => true, class: "form-horizontal"} do |f|
                .form-group.info-form
                  = f.label :line_one, class: "col-sm-3 control-label white-font hidden-xs"
                  .col-sm-8
                    = f.text_field :line_one, class: "form-control", maxlength: "65", autocomplete: "off", placeholder: "First line of text"
                .form-group.info-form
                  = f.label :line_two, class: "col-sm-3 control-label white-font hidden-xs"
                  .col-sm-8
                    = f.text_field :line_two, class: "form-control", maxlength: "65", autocomplete: "off", placeholder: "Second line of text"
                  .col-sm-11
                    = f.submit class: "btn btn-primary pull-right margin-top-2x"
    #phone-demo-container.col-md-5
      =render "iphone_template"
#process-bar.modal.fade{"data-backdrop" => "false", "data-keyboard" => "false"}
  .modal-dialog
    .modal-content
      .modal-header
        %h1 Processing...
      .modal-body
        %h3.progress-indicator.text-center
        #progress
          .bar.progress-bar.progress-bar-success.progress-bar-striped.active{:style => "width: 0%;"}
